{
    "version": 2,
    "builds": [
      { "src": "backend/index.js", "use": "@vercel/node" },
      { "src": "frontend/vite.config.js", "use": "@vercel/static-build" }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/backend/index.js" },
      { "source": "/(.*)", "destination": "/frontend/index.html" }
    ]
}